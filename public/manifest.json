{
  "name": "Wingmate",
  "description": "copilot for the browser",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "Wingmate"
  },
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  
  "permissions": [
    "tabs",
    "notifications",
    "scripting", 
    "activeTab"
 ],
 "host_permissions": [
  "*://*/*"
]
  
}